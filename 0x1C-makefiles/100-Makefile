CC = gcc
CFLAGS = -Wall -Werror -Wextra -pedantic
SRC = school.c main.c
OBJ = $(SRC:.c=.o)
NAME = school
RM = rm

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) -o $@ $(OBJ)

$(OBJ): %.o: %.c
	$(CC) -c $(CFLAGS) $< m.h

.PHONY: clean oclean fclean re

clean:
	$(RM) -f *~ school

oclean:
	$(RM) -f $(OBJ)

fclean:
	$(RM) -f school $(OBJ) *~

re:
	$(CC) $(CFLAGS) -o $(NAME) $(SRC) m.h
